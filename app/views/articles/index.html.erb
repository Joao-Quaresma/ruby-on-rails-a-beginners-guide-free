<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>


<div class="well">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><strong><%= truncate(article.title, :length => 20) %></strong></td>
          <td><%= truncate(article.description, :length => 60) %></td>
          <td align="right"><%= link_to 'Show', article %></td>
          <td align="right"><%= link_to 'Edit', edit_article_path(article) %></td>
          <td align="right"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td align="right">Created by: <%= article.user.username %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

