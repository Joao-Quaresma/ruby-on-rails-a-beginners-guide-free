<div class="row">
  <div class="col-lg-8">
    <div class="jumbotron">
      <h1>Ohhh Yehh!!</h1>
      <p>Awesome application built with Rails!</p>
      <p></p>
    </div>
  </div>
  <% if current_user %>
    <div class="col-md-4">
      <div class="well">
        <h4>Recent Posts</h4>
        <% @articles.order(id: :desc).limit(2).each do |article| %>
          <strong><%= link_to article.title, article %></strong>
          <p><%= truncate(article.description) %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<!-- /.row -->
<hr>